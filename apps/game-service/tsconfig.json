{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "game-dist",
    "paths": {
      "#/*": ["./src/*"],
      "#lib/*": ["./src/lib/*"],
      "#middlewares/*": ["./src/middlewares/*"],
      "#controllers/*": ["./src/controllers/*"],
      "#routes/*": ["./src/routes/*"],
      "#listeners/*": ["./src/listeners/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
