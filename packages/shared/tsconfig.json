{
  "compilerOptions": {
    "target": "ES2022",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "shared-dist",
    "paths": {
      "#/*": ["./src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
